{
  "Version": "2012-10-17",
  "Statement": [{
    "Effect": "Allow",
    "Action": [
      "cloudformation:*",
      "s3:*",
      "lambda:*",
      "logs:*",
      "events:*",
      "scheduler:*",
      "dynamodb:*",
      "apigateway:*",
      "cloudfront:*",
      "iam:CreateRole",
      "iam:DeleteRole",
      "iam:PassRole",
      "iam:AttachRolePolicy",
      "iam:DetachRolePolicy",
      "iam:PutRolePolicy",
      "iam:DeleteRolePolicy",
      "ssm:*",
      "secretsmanager:*",
      "route53:*",
      "acm:*"
    ],
    "Resource": "*"
  }]
}
