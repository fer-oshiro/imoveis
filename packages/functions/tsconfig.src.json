{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true
  },
  "include": [
    "src/domain/*/services/*.ts",
    "src/domain/*/entities/*.ts",
    "src/domain/*/repositories/*.ts",
    "src/domain/*/dto/*.ts",
    "src/domain/*/vo/*.ts",
    "src/domain/*/errors/*.ts",
    "src/domain/shared/**/*.ts",
    "src/http/**/*.ts"
  ],
  "exclude": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts", "node_modules"]
}
